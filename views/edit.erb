<p>First Name: <%=@student.first_name%></p>
<p>Last Name: <%=@student.last_name%></p>
<p>Age: <%=@student.age %></p>
<p>House: <%=@student.house %></p>

<form method="post" action="/students/<%=@student.id%>/edit">
  <label for="first-name">First Name</label>
    <input type="text" name="first_name" id="first-name" value=" <%=  @student.first_name %>">

  <label for="last-name">Last Name</label>
    <input type="text" name="last_name" id="last-name" value="<%=@student.last_name%>">

  <label for="age">Age:</label>
  <input type="number" name="age" id="age" value= "<%= @student.age %>">

  <label for="house-select">Select a house:</label>
  <select id="house-select" name="house">
    <%if @student.house != "Gryffindor" %>
      <option value="Gryffindor">Gryffindor</option>
    <%end  %>
    <%if @student.house != "Ravenclaw" %>
      <option value="Ravenclaw">Ravenclaw</option>
    <%end  %>
    <%if @student.house != "Hufflepuff" %>
      <option value="Hufflepuff">Hufflepuff</option>
    <%end  %>
    <%if @student.house != "Slytherin" %>
      <option value="Slytherin">Slytherin</option>
    <%end  %>
  </select>


  <input type="submit"  value="Edit Student">

</form>
